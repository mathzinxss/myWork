programa {
    funcao inicio() {

        inteiro num, ante, suce

        escreva("Digite um número: ")
        leia(num)

        ante = num - 1
        suce = num + 1

        escreva("\n\n")
        escreva("O antecessor de ", num, " é ", ante)
        escreva("\n\n")
        escreva("O sucessor de ", num, " é ", suce)

        escreva("\n\n")   
    }
    /*
        Faça um algoritmo que receba um número inteiro e imprima na tela o seu antecessor e o seu sucessor.
    */

}
